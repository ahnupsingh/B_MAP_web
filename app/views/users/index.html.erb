<% provide(:title, "All users") %>
<h1>All users</h1>

<ul class="users">
  <% @user.each do |user| %>
    <li>
      <%= gravatar_for user %>
      <%= link_to user.name, user %>
      <% if current_user.is_admin? && !current_user?(user) %>
        <%= link_to user, class: "btn", method: :delete, data: { confirm: "Are you sure?"} do %>
          <span class="glyphicon glyphicon-remove"></span> delete
        <% end %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate @user %>
